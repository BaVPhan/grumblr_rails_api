<%= link_to "View All Grumbles", grumbles_path %>

<div class="grumble">
  <h2><%= @grumble.title %></h2>
  <h3>By: <%= @grumble.authorName %></h3>
  <%= image_tag @grumble.photoUrl %>
  <p><%= @grumble.content %></p>
  
  <%= link_to "Edit Grumble", edit_grumble_path(@grumble) %>
  <%= link_to "Delete Grumble", grumble_path(@grumble), method: :delete %>
</div>


<h3>Comments</h3>

<%= link_to "Add Comment", new_grumble_comment_path(@grumble) %>

<% @grumble.comments.each do |comment| %>
  <div class="comment">
    <p><%= comment.content %></p>
    <h4>By: <%= comment.authorName %></h4>
    <%= link_to "Edit Comment", edit_grumble_comment_path(@grumble, comment) %>
    <%= link_to "Delete Comment", grumble_comment_path(@grumble, comment), method: :delete %>
  </div>
<% end %>
